local function createImageButton(size, pos, asset)
    local btn = Instance.new("ImageButton")
    btn.Size = size
    btn.Position = pos
    btn.AnchorPoint = Vector2.new(1,0)
    btn.BackgroundTransparency = 1
    btn.Image = asset
    btn.ScaleType = Enum.ScaleType.Fit
    btn.ZIndex = 3
    btn.Parent = frame
    btn.MouseEnter:Connect(function() btn.ImageColor3 = Color3.fromRGB(220,220,220) end)
    btn.MouseLeave:Connect(function() btn.ImageColor3 = Color3.fromRGB(255,255,255) end)
    return btn
end

