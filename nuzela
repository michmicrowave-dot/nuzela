    if box.Text ~= "" then
        TweenService:Create(placeholder, TweenInfo.new(0.2), {TextTransparency=1}):Play()
    else
        TweenService:Create(placeholder, TweenInfo.new(0.2), {TextTransparency=0}):Play()
    end
end)


box.Focused:Connect(function()
    TweenService:Create(inputStroke, TweenInfo.new(0.2), {Color = Color3.fromRGB(0,120,255)}):Play()
end)

box.FocusLost:Connect(function(enterPressed)
    TweenService:Create(inputStroke, TweenInfo.new(0.2), {Color = Color3.fromRGB(40,40,45)}):Play()
    if enterPressed then sendBypassed() end
end)



local function createGradientButton(size, position, iconAsset)
    local btn = Instance.new("TextButton")
    btn.Size = size
    btn.Position = position
    btn.BackgroundTransparency = 0
    btn.AutoButtonColor = false
    btn.Text = ""
    btn.Parent = frame
    btn.ZIndex = 3

    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,8)
    Instance.new("UIStroke", btn).Color = Color3.fromRGB(40,40,45)

    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(0,120,255)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0,200,255))
    }
    gradient.Rotation = 0
    gradient.Parent = btn

    local icon = Instance.new("ImageLabel")
    icon.BackgroundTransparency = 1
    icon.Image = iconAsset
    icon.Size = UDim2.new(0,28,0,28)
    icon.Position = UDim2.new(0.5,-14,0.5,-14)
    icon.ZIndex = 4
    icon.Parent = btn

    
    task.spawn(function()
        while true do
            for i = 0,360,1 do
                gradient.Rotation = i
                task.wait(0.02)
            end
        end
    end)

    
    local normalSize = size
    local hoverSize = UDim2.new(size.X.Scale * 1.04, size.X.Offset, size.Y.Scale * 1.11, size.Y.Offset)
    local normalPos = position
    local hoverPos = UDim2.new(
        normalPos.X.Scale - (hoverSize.X.Scale - normalSize.X.Scale)/2,
        normalPos.X.Offset - (hoverSize.X.Offset - normalSize.X.Offset)/2,
        normalPos.Y.Scale - (hoverSize.Y.Scale - normalSize.Y.Scale)/2,
        normalPos.Y.Offset - (hoverSize.Y.Offset - normalSize.Y.Offset)/2
    )

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.22), {
            Size = hoverSize,
            Position = hoverPos,
            BackgroundTransparency = 0.05
        }):Play()
    end)

    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.22), {
            Size = normalSize,
            Position = normalPos,
            BackgroundTransparency = 0
        }):Play()
    end)

    return btn, icon
end

local BYPASS_ICON_ASSET_ID = "rbxassetid://98712755979169"
local bypassButton, bypassIcon = createGradientButton(UDim2.new(0.5,0,0,45), UDim2.new(0.25,0,0.75,0), BYPASS_ICON_ASSET_ID)


local RESET_ICON_ASSET_ID = "rbxassetid://89515271880693" -- replace with your asset
local resetButton, resetIcon = createGradientButton(UDim2.new(0,45,0,45), UDim2.new(0, bypassButton.Position.X.Offset + bypassButton.Size.X.Offset + 350, 0.75, 0), RESET_ICON_ASSET_ID)


local function sendRandomMessage()
    if #randomMessages == 0 then return end
    local msg = randomMessages[math.random(1,#randomMessages)]
    local ok,channel = pcall(function() return TextChatService.TextChannels:FindFirstChild("RBXGeneral") end)
    if ok and channel and channel.SendAsync then
        pcall(function() channel:SendAsync(msg) end)
    else
        local event = game.ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents")
        if event and event:FindFirstChild("SayMessageRequest") then
            pcall(function() event.SayMessageRequest:FireServer(msg,"All") end)
        end
    end
end
resetButton.MouseButton1Click:Connect(sendRandomMessage)


local function sendBypassed()
    local text = box.Text
    if text ~= "" then
        local converted = convertToUnicode(text)
        local ok,channel = pcall(function() return TextChatService.TextChannels:FindFirstChild("RBXGeneral") end)
        if ok and channel and channel.SendAsync then
            pcall(function() channel:SendAsync(converted) end)
        else
            local event = game.ReplicatedStorage:FindFirstChild("DefaultChatSystemChatEvents")
            if event and event:FindFirstChild("SayMessageRequest") then
                pcall(function() event.SayMessageRequest:FireServer(converted,"All") end)
            end
        end
        box.Text = ""
    end
end
bypassButton.MouseButton1Click:Connect(sendBypassed)
box.FocusLost:Connect(function(enterPressed) if enterPressed then sendBypassed() end end)


local function tweenObject(obj, properties, time, style, direction)
    style = style or Enum.EasingStyle.Quad
    direction = direction or Enum.EasingDirection.Out
    TweenService:Create(obj, TweenInfo.new(time, style, direction), properties):Play()
end


local isMinimized = false
local fullSize = UDim2.new(0,450,0,280)
local minimizedSize = UDim2.new(0,450,0,55)
local function setInteractable(state)
    box.Active = state
    box.TextEditable = state
    bypassButton.Active = state
    resetButton.Active = state
end

closeButtonImg.MouseButton1Click:Connect(function()
    setInteractable(false)
    for _, obj in ipairs(frame:GetDescendants()) do
        if obj:IsA("UIStroke") then
            TweenService:Create(obj, TweenInfo.new(0.2), {Transparency = 1}):Play()
        elseif obj:IsA("TextLabel") then
            TweenService:Create(obj, TweenInfo.new(0.2), {TextTransparency = 1}):Play()
        elseif obj:IsA("Frame") or obj:IsA("TextBox") then
            TweenService:Create(obj, TweenInfo.new(0.2), {BackgroundTransparency = 1}):Play()
        elseif obj:IsA("ImageLabel") or obj:IsA("ImageButton") then
            TweenService:Create(obj, TweenInfo.new(0.2), {ImageTransparency = 1}):Play()
        end
    end
    task.wait(0.25)
    local closeTween = TweenService:Create(frame, TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut), {
        Size = UDim2.new(0,0,0,0),
        BackgroundTransparency = 1
    })
    closeTween:Play()
    closeTween.Completed:Wait()
    gui.Enabled = false
    gui:Destroy()
end)

minimizeButtonImg.MouseButton1Click:Connect(function()
    if not isMinimized then
        isMinimized = true
        setInteractable(false)

        TweenService:Create(profileFrame, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
        TweenService:Create(inputFrame, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
        TweenService:Create(bypassButton, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
        TweenService:Create(resetButton, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
        TweenService:Create(betaBadge, TweenInfo.new(0.25), {BackgroundTransparency = 1}):Play()
        TweenService:Create(bypassIcon, TweenInfo.new(0.25), {ImageTransparency = 1}):Play()
        TweenService:Create(resetIcon, TweenInfo.new(0.25), {ImageTransparency = 1}):Play()

        task.wait(0.25)
        TweenService:Create(frame, TweenInfo.new(0.3), {Size = minimizedSize}):Play()

        task.wait(0.3)
        profileFrame.Visible = false
        inputFrame.Visible = false
        bypassButton.Visible = false
        resetButton.Visible = false
        betaBadge.Visible = false

    else
        isMinimized = false
        TweenService:Create(frame, TweenInfo.new(0.3), {Size = fullSize}):Play()

        task.wait(0.15)
        profileFrame.Visible = true
        inputFrame.Visible = true
        bypassButton.Visible = true
        resetButton.Visible = true
        betaBadge.Visible = true

        TweenService:Create(profileFrame, TweenInfo.new(0.25), {BackgroundTransparency = 0.1}):Play()
        TweenService:Create(inputFrame, TweenInfo.new(0.25), {BackgroundTransparency = 0.1}):Play()
        TweenService:Create(bypassButton, TweenInfo.new(0.25), {BackgroundTransparency = 0}):Play()
        TweenService:Create(bypassIcon, TweenInfo.new(0.25), {ImageTransparency = 0}):Play()
        TweenService:Create(resetButton, TweenInfo.new(0.25), {BackgroundTransparency = 0}):Play()
        TweenService:Create(resetIcon, TweenInfo.new(0.25), {ImageTransparency = 0}):Play()
        TweenService:Create(betaBadge, TweenInfo.new(0.25), {BackgroundTransparency = 0}):Play()

        setInteractable(true)
    end
end)


tweenObject(frame, {Size=fullSize},0.4)
