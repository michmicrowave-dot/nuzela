local method = {
	["a"]="ส",["b"]="ხ",["c"]="ϲ",["d"]="ɖ",["e"]="е",["f"]="ʄ",
	["g"]="ɠ",["h"]="һ",["i"]="ı",["j"]="j",["k"]="Ϗ",["l"]="ӏ",
	["m"]="ｍ",["n"]="ฑ",["o"]="ϙ",["p"]="р",["q"]="q",["r"]="ɽ",
	["s"]="ธ",["t"]="ṭ",["u"]="ư",["v"]="v",["w"]="พ",["x"]="x",
	["y"]="у",["z"]="ⴭ",["F"]="ꜰ",["C"]="ᴄ",["D"]="Ḍ",["E"]="ᴇ",
	["H"]="Ḥ",["K"]="K",["I"]="l",["N"]="Ṇ",["O"]="ᴏ",["P"]="ᴘ",
	["R"]="R",["S"]="ꜱ",["T"]="ᴛ",["G"]="Ⴚ",["A"]="ᴀ",["J"]="ᴊ",
	["M"]="ᴍ",["U"]="ᴜ",["V"]="ᴠ",["W"]="ᴡ",["Z"]="ᴢ",[" "]="\31"
}

local function convertToUnicode(text)
    local out = {}
    for i = 1, #text do
        local ch = text:sub(i,i)
        table.insert(out, method[ch] or ch)
    end
    return table.concat(out)
end


